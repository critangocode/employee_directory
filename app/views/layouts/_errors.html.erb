<% if @employee.errors.any? %> 
	<div class="mx-auto md:w2/3 w-full flex text-center">
		<div class="mx-auto py-2 px-2 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block">
			<h2>The following errors prevented the employee from being saved:</h2> 
			<ul> 
			<% @employee.errors.full_messages.each do |msg| %> 
						<li class="font-normal text-red-500"><%= msg %></li> 
			<% end %> 
			</ul>
		</div>
	</div>
<% end %>